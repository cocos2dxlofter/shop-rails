<h1>物流公司列表
  <small><%= link_to '新建物流公司', shop.new_logistic_path ,:class => "btn btn-primary" %></small>
</h1>
<% if flash[:notice] || flash[:error]  %>
<div class="alert <%= "alert-success" if flash[:notice] %> <%= "alert-danger" if flash[:error] %>">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:notice] %><%= flash[:error] %>
</div>
<% end %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>公司名称</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @logistics.each do |logistic| %>
      <tr>
        <td><%= logistic.name %></td>
        <td><%= link_to '修改', edit_logistic_path(logistic) %></td>
        <td><%= link_to '删除', logistic, method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>