<h1>类型列表
  <small><%= link_to '新建类型', shop.new_customer_type_path ,:class => "btn btn-primary" %></small>
</h1>
<% if flash[:notice] || flash[:error]  %>
<div class="alert <%= "alert-success" if flash[:notice] %> <%= "alert-danger" if flash[:error] %>">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:notice] %><%= flash[:error] %>
</div>
<% end %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>类型名称</th>
      <th>类型折扣</th>
      <th>类型描述</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_types.each do |customer_type| %>
      <tr>
        <td><%= customer_type.name %></td>
        <td><%= customer_type.discount %> %</td>
        <td><%= customer_type.remark %></td>
        <td><%= link_to '修改', shop.edit_customer_type_path(customer_type) %></td>
        <td><%= link_to '删除', customer_type, method: :delete, data: { confirm: '您确定要删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
