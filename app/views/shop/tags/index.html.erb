<h1>标签列表
  <small><%= link_to '新建标签', shop.new_tag_path ,:class => "btn btn-primary" %></small>
</h1>
<% if flash[:notice] || flash[:error]  %>
<div class="alert <%= "alert-success" if flash[:notice] %> <%= "alert-danger" if flash[:error] %>">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:notice] %><%= flash[:error] %>
</div>
<% end %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>名称</th>
      <th>排列顺序</th>
      <th>是否可用</th>      
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.the_order %></td>
        <td><%= bool_label(tag.is_enabled) %></td>        
        <td><%= link_to '修改', shop.edit_tag_path(tag) %></td>
        <td><%= link_to '删除', tag, method: :delete, data: { confirm: '您确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
