<h1>shop_order_items列表
  <small><%= link_to '新建shop_order_items', shop.new_order_item_path ,:class => "btn btn-primary" %></small>
</h1>
<% if flash[:notice] || flash[:error]  %>
<div class="alert <%= "alert-success" if flash[:notice] %> <%= "alert-danger" if flash[:error] %>">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:notice] %><%= flash[:error] %>
</div>
<% end %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Order</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Discount</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_order_items.each do |shop_order_item| %>
      <tr>
        <td><%= shop_order_item.order %></td>
        <td><%= shop_order_item.product %></td>
        <td><%= shop_order_item.quantity %></td>
        <td><%= shop_order_item.price %></td>
        <td><%= shop_order_item.discount %></td>
        <td><%= link_to '修改', shop.edit_order_item_path(shop_order_item) %></td>
        <td><%= link_to '删除', shop_order_item, method: :delete, data: { confirm: '您确定要删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
