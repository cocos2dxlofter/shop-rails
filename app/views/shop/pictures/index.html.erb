<h1>shop_pictures列表
  <small><%= link_to '新建shop_pictures', shop.new_picture_path ,:class => "btn btn-primary" %></small>
</h1>
<% if flash[:notice] || flash[:error]  %>
<div class="alert <%= "alert-success" if flash[:notice] %> <%= "alert-danger" if flash[:error] %>">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:notice] %><%= flash[:error] %>
</div>
<% end %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Product</th>
      <th>Path</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_pictures.each do |shop_picture| %>
      <tr>
        <td><%= shop_picture.product %></td>
        <td><%= shop_picture.path %></td>
        <td><%= shop_picture.description %></td>
        <td><%= link_to '修改', shop.edit_picture_path(shop_picture) %></td>
        <td><%= link_to '删除', shop_picture, method: :delete, data: { confirm: '您确定要删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
