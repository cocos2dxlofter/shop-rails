<h1>微购商品查看</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>商品名称:</strong>
  <%= @shop_one_product.product.name %>
</p>

<p>
  <strong>期数:</strong>
  <%= @shop_one_product.issue_no %>
</p>

<p>
  <strong>价格:</strong>
  <%= @shop_one_product.price %> 元
</p>

<p>
  <strong>已参与人次:</strong>
  <%= @shop_one_product.join_person_time %>
</p>

<p>
  <strong>幸运微购码:</strong>
  <%= @shop_one_product.result_code %>
</p>

<p>
  <strong>幸运用户:</strong>
  <%= @shop_one_product.result_customer %>
</p>

<p>
  <strong>揭晓时间:</strong>
  <%= @shop_one_product.result_time %>
</p>

<p>
  <strong>是否结束:</strong>
  <%= bool_label(@shop_one_product.is_closed) %>
</p>

<%= link_to '返回', shop.one_products_path, :class => "btn btn-default" %>

<h3>微购码列表</h3>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>微购码号</th>
      <th>获得用户</th>      
      <th>获得时间</th>       
      <th></th>      
    </tr>
  </thead>

  <tbody>
    <% @shop_one_product.one_codes.each do |code| %>
      <tr>
        <td><%= code.code %></td>
        <td><%= code.customer.name  if code.customer %></td>       
        <td><%= code.updated_at.stftime("%Y-%M-%D %H:%M:%S") if code.customer %></td>    
        <td><%= link_to '查看相关订单', code.one_order if code.one_order%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>