<h1>类别列表
  <small><%= link_to '新建类别', shop.new_category_path ,:class => "btn btn-primary" %></small>
</h1>
<% if flash[:notice] || flash[:error]  %>
<div class="alert <%= "alert-success" if flash[:notice] %> <%= "alert-danger" if flash[:error] %>">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:notice] %><%= flash[:error] %>
</div>
<% end %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>类别名称</th>
      <th>类别编码</th>
      <th>类别图片</th>
      <th>排列顺序</th>      
      <th>是否可用</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_categories.each do |shop_category| %>
      <tr>
        <td><%= shop_category.name %></td>
        <td><%= shop_category.code %></td>
        <td><%= thumbnail shop_category.picture_path %></td>
        <td><%= shop_category.the_order %></td>        
        <td><%= bool_label(shop_category.is_enabled) %></td>
        <td><%= link_to '修改', shop.edit_category_path(shop_category) %></td>
        <td><%= link_to '删除', shop_category, method: :delete, data: { confirm: '您确定要删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
