<h1>Listing product_properties</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Property</th>
      <th>Property value</th>
      <th>Input value</th>
      <th>Product sku</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @product_properties.each do |product_property| %>
      <tr>
        <td><%= product_property.product %></td>
        <td><%= product_property.property %></td>
        <td><%= product_property.property_value %></td>
        <td><%= product_property.input_value %></td>
        <td><%= product_property.product_sku %></td>
        <td><%= link_to 'Show', product_property %></td>
        <td><%= link_to 'Edit', edit_product_property_path(product_property) %></td>
        <td><%= link_to 'Destroy', product_property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

