<h1>发货情况</h1>
<p id="notice"><%= notice %></p>
<p>
  <strong>物流公司:</strong>
  <%= @delivery.logistic.name if @delivery.logistic %>
</p>

<p>
  <strong>快递单号:</strong>
  <%= @delivery.invoice_no %>
</p>

<p>
  <strong>发货时间:</strong>
  <%= @delivery.created_at.strftime("%Y-%m-%d %H:%M") %>
</p>

<p>
  <strong>备注:</strong>
  <%= @delivery.remark %>
</p>

<%= link_to ' 返回订单 ', @delivery.order ,:class => 'btn btn-default'%>
<h2>发货商品列表</h2>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>产品SKU编码</th>
      <th>产品名称</th> 
      <th>产品数量</th>  
    </tr>
  </thead>

  <tbody>
    <%
       @delivery.delivery_items.each do |item| 
    %>
      <tr>     
        <td><%= item.product_sku.code %></td>
        <td><%= item.product_sku.product.name + "(" + item.product_sku.product_sku_property_list +  ")" %></td>
        <td><%= item.quantity %></td>           
      </tr>
    <% end %>
    
  </tbody>
</table>
