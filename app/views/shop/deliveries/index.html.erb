<h1>Listing deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Express</th>
      <th>Invoice no</th>
      <th>Remark</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.order %></td>
        <td><%= delivery.logistic %></td>
        <td><%= delivery.invoice_no %></td>
        <td><%= delivery.remark %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

