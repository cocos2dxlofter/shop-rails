<h1>运费列表
<small><%= link_to '新建运费', shop.new_district_transport_path ,:class => "btn btn-primary" %></small>
</h1>
<% if flash[:notice] || flash[:error]  %>
<div class="alert <%= "alert-success" if flash[:notice] %> <%= "alert-danger" if flash[:error] %>">
  <a class="close" data-dismiss="alert">×</a>
  <%= flash[:notice] %><%= flash[:error] %>
</div>
<% end %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>所在地区</th>
      <th>运费单价</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @district_transports.each do |district_transport| %>
      <tr>
        <td><%= district_transport.district.full_name if  district_transport.district%></td>
        <td><%= district_transport.price_yuan %>元</td>        
        <td><%= link_to '修改', shop.edit_district_transport_path(district_transport) %></td>
        <td><%= link_to '删除', district_transport, method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
